extends layout

block content
  h1= "Board Display"

  p Query Parameters:
  | Rows: #{query.rows}, Cols: #{query.cols}

  table#outer
  - for (let i = 1; i <= rows; i++)
    tr#middle
      - for (let j = 1; j <= cols; j++)
        td= calculateCellValue(i, j)

  script.
    function calculateCellValue(row, col) {
      if (row === col) {
        return 1;
      } else if (row === col + 1) {
        return 2;
      } else if (row === col - 1) {
        return row;
      } else {
        return 0;
      }
    }