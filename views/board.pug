extends layout

block content
  h1= "Board Display"

  p Rows: #{query.rows}, Cols: #{query.cols}
  - let rows = Number(query.rows);
  - let cols = Number(query.cols);

  if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Invalid input.
  else if (rows < 1 || rows > 10 || cols < 1 || cols > 10)
    p Rows and columns must be between 1 and 10.
  else
    table#outer
      - for (let i = 0; i < rows; i++)
        tr
          - for (let j = 0; j < cols; j++)
            - var cellValue = 0;
            - if (i === j) 
              - cellValue = 1;
            - else if (i === j + 1)
              - cellValue = 2;
            - else if (i === j - 1)
              - cellValue = i;
            td = cellValue